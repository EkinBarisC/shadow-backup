<Page x:Class="Back_It_Up.Views.Pages.RestorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Back_It_Up.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="RestorePage"
   d:DataContext="{d:DesignInstance local:RestorePage,
                                   IsDesignTimeCreatable=False}"
   d:DesignHeight="450"
   d:DesignWidth="800"
   ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
   ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
   mc:Ignorable="d">

    <Grid>

        <ui:DataGrid ItemsSource="{Binding ViewModel.BackupVersions, Mode=TwoWay}" AutoGenerateColumns="False" >
            <ui:DataGrid.Columns>
                <DataGridTextColumn Header="Version" Binding="{Binding Version}" />
                <DataGridTextColumn Header="Date Created" Binding="{Binding DateCreated}" Width="*" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>
        <Button Content="Restore" />
    </Grid>
</Page>
