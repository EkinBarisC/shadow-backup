<UserControl x:Class="Back_It_Up.Views.UserControls.ScheduleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Back_It_Up.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <DatePicker x:Name="StartDatePicker" />
            <TimePicker x:Name="StartTimePicker" />
            <ComboBox x:Name="FrequencyComboBox" SelectedItem="{Binding Frequency}">
                <ComboBoxItem Content="Daily" />
                <ComboBoxItem Content="Weekly" />
                <!-- Add more frequency options as needed -->
            </ComboBox>
            <Button Content="Schedule Backup" Command="{Binding ScheduleBackupCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
